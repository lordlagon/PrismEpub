<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrismEpub.Views.BookPage"
             Title="{Binding Title}"
              >
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Frame x:Name="frame" HeightRequest="100" IsTabStop="True"  >
                <Label x:Name="texto" Text="{Binding Texto}" LineBreakMode="WordWrap" PropertyChanged="Texto_PropertyChanged" MaxLines="5"/>
                

            </Frame>
            
        </StackLayout>
            
    </ContentPage.Content>
</ContentPage>